

#!/usr/bin/env bash
# A Bash script that displays the time for 12 hours and 59 minutes:

# 1. display hours from 0 to 12
# 2. display minutes from 1 to 59

i=0
j=1

while [ $i -le 12 ]
do
    echo "Hour: $i"
    while [ $j -le 59 ]
    do
        echo "$j"
        j=$(( j + 1 ))
    done
    j=1
    i=$(( i + 1 ))
done
